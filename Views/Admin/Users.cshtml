@using KariyerPortal.Models
@model IEnumerable<AppUser>

<h2>Kullanıcılar</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>Kullanıcı Adı</th>
            <th>Email</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.AdSoyad</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="UserDetail" asp-route-id="@user.Id" class="btn btn-sm btn-primary">
                            Profil Detay
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">Henüz kullanıcı yok.</td>
            </tr>
        }
    </tbody>
</table>
