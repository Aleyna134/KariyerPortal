@model IEnumerable<KariyerPortal.Models.Profile.Project>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Proje Adı</th>
                <th>Tarih</th>
                <th>Açıklama</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model)
            {
                <tr>
                    <td>@project.ProjectName</td>
                    <td>@project.ProjectDate.ToString("dd.MM.yyyy")</td>
                    <td>@project.Description</td>
                    <td>
                        <button class="btn btn-danger btn-sm deleteProjectBtn" data-id="@project.Id">Sil</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Henüz proje eklenmemiş.</p>
}
