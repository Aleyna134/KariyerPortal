 @model List<KariyerPortal.Models.Profile.Skill>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Yetenek</th>
                <th>Seviye</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var skill in Model)
            {
                <tr>
                    <td>@skill.SkillName</td>
                    <td>@skill.Level</td>
                    <td>
                        <button class="btn btn-danger btn-sm deleteSkillBtn" data-id="@skill.Id">Sil</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Henüz yetenek eklenmemiş.</p>
}
