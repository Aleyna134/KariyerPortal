<form id="addProjectForm" asp-action="AddProject" asp-controller="Profile" method="post">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label for="ProjectName" class="form-label">Proje Adı</label>
        <input type="text" name="ProjectName" class="form-control" required value="@Model.ProjectName" />
    </div>
    <div class="mb-3">
        <label for="ProjectDate" class="form-label">Proje Tarihi</label>
        <input type="date" name="ProjectDate" class="form-control" required value="@Model.ProjectDate.ToString("yyyy-MM-dd")" />
    </div>
    <div class="mb-3">
        <label for="Description" class="form-label">Açıklama</label>
        <textarea name="Description" class="form-control">@Model.Description</textarea>
    </div>
    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-success">Kaydet</button>
        <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">İptal</button>
    </div>
</form>

