@using KariyerPortal.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<AppUser> UserManager
@inject SignInManager<AppUser> SignInManager

@{
    AppUser currentUser = null;
    var isAdmin = false;

    if (SignInManager.IsSignedIn(User))
    {
        currentUser = await UserManager.GetUserAsync(User);
        isAdmin = await UserManager.IsInRoleAsync(currentUser, "Admin");
    }
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KariyerPortal</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KariyerPortal.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">KariyerPortal</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">

                        @* Sadece giriş yapanlar için menüler *@
                        @if (SignInManager.IsSignedIn(User))
                        {
                           @*  <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Anasayfa</a>
                            </li> *@
                            <li class="nav-item">
                                @if (isAdmin)
                                {
                                    <a class="nav-link text-dark" asp-controller="Admin" asp-action="JobList">İlanlar</a>
                                }
                                else
                                {
                                    <a class="nav-link text-dark" asp-controller="Job" asp-action="List">İlanlar</a>
                                }
                            </li>

                            @if (User.IsInRole("User"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Job" asp-action="MyApplications">Başvurularım</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Profile" asp-action="Index">CV Düzenle</a>
                                </li>
                            }
                        }

                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <span class="navbar-text">
                                    @{
                                        var loggedUser = await UserManager.GetUserAsync(User);
                                        if (await UserManager.IsInRoleAsync(loggedUser, "Admin"))
                                        {
                                            <text>Merhaba, Admin</text>
                                        }
                                        else
                                        {
                                            <text>Merhaba, @loggedUser.AdSoyad</text>
                                        }
                                    }
                                </span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger btn-sm ms-2">Çıkış Yap</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-primary btn-sm ms-2" asp-controller="Auth" asp-action="Login">Giriş Yap</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-success btn-sm ms-2" asp-controller="Auth" asp-action="Register">Kayıt Ol</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
        @if (Context.Request.Path.Value.Contains("Hakkimda"))
        {
            <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#hakkimdaModal">
                Hakkımda Bilgisi Ekle
            </button>
        }
    </main>

    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            &copy; 2025 - KariyerPortal - <a asp-controller="Home" asp-action="Privacy">Gizlilik</a>
        </div>
    </footer>

    <!-- JAVASCRIPT -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
